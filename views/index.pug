doctype html
html(lang="en")
  include includes/header.pug
  include includes/mixins.pug
  body
    div(class="header")
      a(href="/")
        h1=header
      +search
      +sort(sort)
    .video-container
      each v in videos
        +vid(v.name, '/videos/'+v.id, v.duration, v.thumbnails)
    div(class="pagination-container")
      +pagination(current, total, prefix)