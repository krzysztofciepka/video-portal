doctype html
html(lang="en")
  include includes/header.pug
  include includes/mixins.pug
  body
    a(href="/", class="header")
      h1=header
      +search
      +sort
    .video-container
      each v in videos
        +vid(v.name, '/videos/'+v.id, v.duration, v.thumbnails)
    div(class="pagination-container")
      +pagination(current, total, prefix)
    
    script
      include includes/site.js